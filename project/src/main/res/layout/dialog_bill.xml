<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/radioBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/radioCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/def_magrin"
            android:layout_marginLeft="@dimen/def_magrin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <RadioButton
            android:id="@+id/radioKarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/def_magrin"
            android:layout_marginLeft="@dimen/def_magrin"
            app:layout_constraintTop_toBottomOf="@id/radioCash"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </RadioGroup>


    <TextView
        android:id="@+id/cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash"
        android:textSize="@dimen/def_magrin_text"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/splash_screen_dimen"
        android:layout_marginTop="@dimen/def_magrin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/radioBill"/>


    <TextView
        android:id="@+id/karta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/karta"
        android:textSize="@dimen/def_magrin_text"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/splash_screen_dimen"
        android:layout_marginTop="@dimen/def_magrin"
        app:layout_constraintTop_toBottomOf="@id/cash"
        app:layout_constraintLeft_toRightOf="@id/radioBill"/>


</androidx.constraintlayout.widget.ConstraintLayout>