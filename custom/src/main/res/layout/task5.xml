<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            android:tint="@android:color/darker_gray"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:layout_gravity="center"
            android:textSize="@dimen/marginTopX"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certificated"
            android:layout_gravity="bottom|left"
            android:textSize="@dimen/marginTop"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/marginTopX"
            android:paddingBottom="@dimen/margin"
            />
    </FrameLayout>


        <EditText
            android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTopX"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:background="@drawable/task5_photo"
            app:layout_constraintTop_toBottomOf="@id/photo"

        />
     <ImageView
         android:id="@+id/share"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:layout_marginRight="5dp"
         android:src="@drawable/ic_share_black_18dp"
         app:layout_constraintTop_toBottomOf="@id/photo"
         app:layout_constraintRight_toRightOf="@id/editText"
         android:tint="@android:color/darker_gray"

         />
    <ImageView
        android:id="@+id/turned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_turned_in_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo"
        app:layout_constraintRight_toLeftOf="@id/share"
        />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_favorite_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo"
        app:layout_constraintRight_toLeftOf="@id/turned"
        />


    <FrameLayout
        android:id="@+id/photo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText">

        <ImageView
            android:layout_width="@dimen/task5"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            android:tint="@android:color/darker_gray"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layouts"
            android:layout_gravity="bottom|left"
            android:textSize="@dimen/marginTop"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/marginTop"
            android:paddingBottom="@dimen/margin"
            />
    </FrameLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/task5"
        android:layout_height="@dimen/marginTopX"
        android:background="@drawable/task5_photo"
        app:layout_constraintTop_toBottomOf="@id/photo2"
        app:layout_constraintRight_toRightOf="@id/photo2"
        app:layout_constraintLeft_toLeftOf="@id/photo2"

        />

    <ImageView
        android:id="@+id/share2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_share_black_18dp"
        app:layout_constraintTop_toBottomOf="@id/photo2"
        app:layout_constraintRight_toRightOf="@id/editText2"
        android:tint="@android:color/darker_gray"

        />
    <ImageView
        android:id="@+id/turned2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_turned_in_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo2"
        app:layout_constraintRight_toLeftOf="@id/share2"
        />

    <ImageView
        android:id="@+id/favorite2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_favorite_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo2"
        app:layout_constraintRight_toLeftOf="@id/turned2"
        />


    <FrameLayout
        android:id="@+id/photo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText">

        <ImageView
            android:layout_width="@dimen/task5"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            android:tint="@android:color/darker_gray"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:layout_gravity="bottom|left"
            android:textSize="@dimen/marginTop"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/marginTop"
            android:paddingBottom="@dimen/margin"
            />
    </FrameLayout>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="@dimen/task5"
        android:layout_height="@dimen/marginTopX"
        android:background="@drawable/task5_photo"
        app:layout_constraintTop_toBottomOf="@id/photo3"
        app:layout_constraintRight_toRightOf="@id/photo3"
        app:layout_constraintLeft_toLeftOf="@id/photo3"

        />


    <ImageView
        android:id="@+id/share3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_share_black_18dp"
        app:layout_constraintTop_toBottomOf="@id/photo3"
        app:layout_constraintRight_toRightOf="@id/editText3"
        android:tint="@android:color/darker_gray"

        />
    <ImageView
        android:id="@+id/turned3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_turned_in_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo3"
        app:layout_constraintRight_toLeftOf="@id/share3"
        />

    <ImageView
        android:id="@+id/favorite3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_favorite_black_18dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/photo3"
        app:layout_constraintRight_toLeftOf="@id/turned3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>