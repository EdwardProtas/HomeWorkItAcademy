<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/weather_icon"
    android:layout_width="58dp"
    android:layout_height="58dp"
    android:src="@drawable/ic_wb_cloudy_black_24dp"
    android:layout_marginTop="@dimen/margin_left"
    android:layout_marginEnd="4dp"
app:layout_constraintBottom_toBottomOf="@id/oclock"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/oclock"/>

    <TextView
        android:id="@+id/oclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/switch_celsius"
        android:hint="15:00"
        android:layout_marginTop="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginEnd="4dp"
        app:layout_constraintLeft_toRightOf="@id/weather_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_city_fragmentWeatherCity"/>


    <TextView
        android:id="@+id/text_city_fragmentWeatherCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/switch_celsius"
        android:hint="@string/city"
        android:layout_marginTop="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginEnd="4dp"
        app:layout_constraintLeft_toRightOf="@id/oclock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/celsius"/>

    <TextView
        android:id="@+id/celsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/switch_celsius"
        android:hint="15 C"
        android:layout_marginTop="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginEnd="4dp"
        app:layout_constraintLeft_toRightOf="@id/text_city_fragmentWeatherCity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_margin="@dimen/margin_left"
        app:layout_constraintTop_toBottomOf="@id/text_city_fragmentWeatherCity"/>

</androidx.constraintlayout.widget.ConstraintLayout>