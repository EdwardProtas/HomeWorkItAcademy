<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="@string/weather"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_toolBar"
            app:layout_constraintBottom_toBottomOf="@id/toolBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/settings_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left"
            android:src="@drawable/ic_settings_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/toolBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <TextView
        android:id="@+id/nameCityFragmentMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margint_top_fragment_main"
        android:textSize="@dimen/name_city_fragment_main"
        android:hint="@string/city"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        />

    <ImageView
        android:id="@+id/snowFragmentMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src ="@drawable/ic_ac_unit_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/nameCityFragmentMain"
        app:layout_constraintLeft_toRightOf="@id/nameCityFragmentMain"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        />

    <TextView
        android:id="@+id/textTempFragmentMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/name_city_fragment_main"
        android:hint="-29 C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameCityFragmentMain" />


    <TextView
        android:id="@+id/textWeatherfragmentMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/settings_toolBar"
        android:hint="now snowing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTempFragmentMain" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewFragmentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/switch_celsius"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textWeatherfragmentMain"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonLocationCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left"
        android:src="@drawable/ic_location_city_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="auto"
        />
</androidx.constraintlayout.widget.ConstraintLayout>